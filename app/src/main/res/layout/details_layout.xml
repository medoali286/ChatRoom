<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/details_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="message goes here"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="32dp"
        android:text="time goes here"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/details_message"
        app:layout_constraintTop_toBottomOf="@+id/details_message" />

    <TextView
        android:id="@+id/details_send_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="32dp"
        android:text="send receive goes here"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/details_time"
        app:layout_constraintTop_toBottomOf="@+id/details_time" />

    <TextView
        android:id="@+id/details_Database_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="32dp"
        android:text="Database id goes here"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/details_send_receive"
        app:layout_constraintTop_toBottomOf="@+id/details_send_receive" />


</androidx.constraintlayout.widget.ConstraintLayout>